<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.lectomundo.controller.admin.AdminUsuariosControlador"
            prefHeight="600.0" prefWidth="1000.0">

    <top>

        <HBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 25;">

            <TextField fx:id="txtBuscar" promptText="Buscar por nombre, tipo..." HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnBuscar" text="Buscar"/>

        </HBox>

    </top>

    <center>

        <TableView fx:id="tblUsuarios" prefHeight="550" style="-fx-background-color: #212f3c; -fx-padding: 15;">

            <columns>

                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colNombre" text="Nombre de Usuario" prefWidth="150"/>
                <TableColumn fx:id="colCorreo" text="Correo" prefWidth="240"/>
                <TableColumn fx:id="colContraseña" text="Contraseña" prefWidth="130"/>
                <TableColumn fx:id="colTipo" text="Tipo de Usuario" prefWidth="120"/>
                <TableColumn fx:id="colMonedas" text="Monedas" prefWidth="110"/>

            </columns>

        </TableView>

    </center>

</BorderPane>
